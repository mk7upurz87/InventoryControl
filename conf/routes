# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Parts
GET     /parts                      controllers.Parts.index()
POST    /parts                      controllers.Parts.newPart()
POST    /parts/:id/delete           controllers.Parts.deletePart(id: Long)
POST    /parts/:id/increment        controllers.Parts.incrementPart(id: Long)
POST    /parts/:id/decrement        controllers.Parts.decrementPart(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
